<% if @current_team%>
<div class="row-fluid">
  <div id="burning-chart" class="span8" style="height:325px"></div>
  <div id="members_board" class="span4">
    
    <div class="row-fluid">
      <div class="span12 well">
        Total scale of backlog:<%=@current_team.total_scale_of_backlog()%>
      </div>
    </div>
  </div>
</div>
<div class="row-fluid">
  <div id="accumulation-chart" class="span8" style="height:325px"></div>
</div>
<script type="text/javascript">
  $(function() {
    window.router = new Miamir.Routers.DashboardRouter({ready_data: <%= @ready.to_json.html_safe -%>,progress_data: <%= @progress.to_json.html_safe -%>,done_data: <%= @done.to_json.html_safe -%>,burning_data: <%= @burning.to_json.html_safe -%>,remain_data: <%= @remain.to_json.html_safe -%>, team_id:<%=@current_team.id%>,members:<%=@current_team.members.to_json.html_safe -%>});
    Backbone.history.start();
  });
</script>
<% end %>